<article id="edit-post-page">
  <a href="/dashboard" style="text-decoration: none;" id="back-to-create"> &larr; Back to Create</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <input name="post-title" id="edit-post-input" type="text" value="{{post.title}}" /> 
      <br> 
      <div>({{post.post_url}})</div>
    </div>
    <div id="edit-post-info">
      {{post.vote_count}} {{format_plural "like" post.vote_count}} by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}" style="text-decoration: none;" id="edit-page-comment-num">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="bttn">Save post</button>
    <button type="button" class="delete-post-btn">Delete post</button>
  </form>
</article>

<form class="comment-form">
  <div>
    <textarea name="comment-body" id="add-comment-input"></textarea>
  </div>

  <div>
    <button class="bttn" type="submit">Add Comment</button>
  </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>